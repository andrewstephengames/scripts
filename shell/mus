#!/usr/bin/env bash
cd ~/Music
echo "Do you want to shuffle the playlist? (y/n)"
read shuffle
echo "Do you want to loop the playlist? (y/n)"
read loop
if (( $loop == "y" ) && ( "$shuffle" == "y" )); then
    mpv "$(ls -d */ | fzf)"* --loop --shuffle --no-audio-display; exit
fi
if (( $shuffle == "y" )); then
    mpv "$(ls -d */ | fzf)"* --shuffle --no-audio-display; exit
fi
if (( $loop == "y" )); then
    mpv "$(ls -d */ | fzf)"* --loop --no-audio-display; exit
fi
