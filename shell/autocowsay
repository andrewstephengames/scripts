#!/bin/sh
declare -a cows=(  
        "beavis.zen"
        "blowfish"
        "bong"
        "bud-frogs" 
        "bunny"
        "cheese"
        "cower"
        "daemon"
        "default"
        "dragon"
        "dragon-and-cow"
        "elephant"
        "elephant-in-snake"
        "eyes"
        "flaming-sheep"
        "ghostbusters"
        "hellokitty"
        "kiss"
        "kitty"
        "koala"
        "kosh"
        "luke-koala"
        "meow"
        "milk"
